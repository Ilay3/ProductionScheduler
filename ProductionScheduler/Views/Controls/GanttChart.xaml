<!-- File: Views/Controls/SimpleGanttChart.xaml -->
<UserControl x:Class="ProductionScheduler.Views.Controls.SimpleGanttChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <!-- Временная шкала -->
            <RowDefinition Height="*"/>
            <!-- Основная область -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Область с именами заданий -->
            <ColumnDefinition Width="*"/>
            <!-- Область диаграммы -->
        </Grid.ColumnDefinitions>

        <!-- Заголовок колонки заданий -->
        <Border Grid.Row="0" Grid.Column="0" Background="#F5F5F5" BorderBrush="#DDD" BorderThickness="0,0,1,1">
            <TextBlock Text="Производственные задания" FontWeight="Bold" FontSize="12"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Временная шкала -->
        <Border Grid.Row="0" Grid.Column="1" Background="#F5F5F5" BorderBrush="#DDD" BorderThickness="0,0,0,1">
            <ScrollViewer x:Name="TimeAxisScrollViewer" HorizontalScrollBarVisibility="Hidden" 
                          VerticalScrollBarVisibility="Disabled">
                <Canvas x:Name="TimeAxisCanvas" Height="50">
                    <!-- Временные метки будут добавлены в коде -->
                </Canvas>
            </ScrollViewer>
        </Border>

        <!-- Область с именами заданий -->
        <Border Grid.Row="1" Grid.Column="0" Background="White" BorderBrush="#DDD" BorderThickness="0,0,1,0">
            <ScrollViewer x:Name="TaskLabelsScrollViewer" VerticalScrollBarVisibility="Hidden" 
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel x:Name="TaskLabelsPanel" Orientation="Vertical">
                    <!-- Метки заданий будут добавлены в коде -->
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Основная область диаграммы Ганта -->
        <Border Grid.Row="1" Grid.Column="1" Background="White" BorderBrush="#DDD" BorderThickness="0">
            <ScrollViewer x:Name="MainScrollViewer" 
                          HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Auto"
                          ScrollChanged="MainScrollViewer_ScrollChanged">
                <Grid>
                    <!-- Фоновые линии сетки -->
                    <Canvas x:Name="GridLinesCanvas"/>

                    <!-- Элементы диаграммы (задания и этапы) -->
                    <Canvas x:Name="GanttCanvas" Background="Transparent"/>

                    <!-- Вертикальная линия текущего времени -->
                    <Line x:Name="CurrentTimeLine" 
                          Y1="0" Y2="400"
                          Stroke="Red" StrokeThickness="2" 
                          Visibility="Visible"/>
                </Grid>
            </ScrollViewer>
        </Border>

        <!-- Контекстное меню для заданий -->
        <Grid.ContextMenu>
            <ContextMenu x:Name="TaskContextMenu">
                <MenuItem Header="▶️ Начать" Click="StartTask_Click"/>
                <MenuItem Header="⏸️ Приостановить" Click="PauseTask_Click"/>
                <MenuItem Header="✅ Завершить" Click="CompleteTask_Click"/>
                <Separator/>
                <MenuItem Header="🕒 Изменить время" Click="EditTime_Click"/>
                <MenuItem Header="✂️ Разделить операцию" Click="SplitOperation_Click"/>
                <Separator/>
                <MenuItem Header="📋 Показать детали" Click="ShowDetails_Click"/>
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</UserControl>