 <UserControl x:Class="ProductionScheduler.Views.Controls.GanttChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid Name="MainGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Заголовки временной шкалы -->
                    <RowDefinition Height="*"/>
                    <!-- Основная область диаграммы -->
                </Grid.RowDefinitions>

                <!-- Временная шкала -->
                <Border Grid.Row="0" Background="LightGray" BorderBrush="Gray" BorderThickness="1" Height="60">
                    <Canvas Name="TimeScaleCanvas">
                        <!-- Временные метки будут добавлены программно -->
                    </Canvas>
                </Border>

                <!-- Основная область Ганта -->
                <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1">
                    <ItemsControl Name="TasksItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas Background="White"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- Каждое задание будет представлено как прямоугольник -->
                                <Border Background="{Binding StatusBrush}" 
                                        BorderBrush="Black" BorderThickness="1"
                                        Width="{Binding BarWidth}" Height="30"
                                        Canvas.Left="{Binding XPosition}" Canvas.Top="{Binding YPosition}"
                                        ToolTip="{Binding ToolTipText}">
                                    <TextBlock Text="{Binding DisplayText}" 
                                               VerticalAlignment="Center" HorizontalAlignment="Center"
                                               FontSize="10" Foreground="Black"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>